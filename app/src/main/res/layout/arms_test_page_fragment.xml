<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weakness_prompt"
        android:textColor="#000"
        android:textSize="32dp"
        android:textAlignment="center"
        android:textStyle="normal"
        android:layout_marginTop="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/yes_weakness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/oval"
        android:text="Yes"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <Button
        android:id="@+id/no_weakness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="No"
        android:layout_marginBottom="100dp"
        android:background="@drawable/oval"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/yes_weakness"
         />

    <TextView
        android:id="@+id/arm_test_result"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/defaultAlertColor"
        android:gravity="center"
        android:text="No results to display."
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
